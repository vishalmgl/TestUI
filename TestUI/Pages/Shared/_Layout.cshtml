<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Test2UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Test2UI.styles.css" asp-append-version="true" />
    <style>
        /* Custom Navbar Styles */
        .navbar-custom {
            background-color: #1e1e1e;
            border-radius: 0;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.4);
        }

            .navbar-custom .navbar-brand {
                font-size: 24px;
                font-weight: bold;
                color: #ffffff;
            }

            .navbar-custom .navbar-nav .nav-link {
                color: #e0e0e0;
                padding: 15px 20px;
                font-size: 16px;
                transition: all 0.3s ease; /* Smooth transition for color and text-shadow */
                border-radius: 5px; /* Rectangular appearance */
                text-shadow: 0 0 5px rgba(0, 123, 255, 0.6); /* Glowing effect */
            }

                .navbar-custom .navbar-nav .nav-link:hover {
                    color: #007bff; /* Text color on hover */
                    text-shadow: 0 0 15px rgba(0, 123, 255, 0.8); /* More intense glow */
                }

            .navbar-custom .navbar-toggler {
                border-color: rgba(0, 0, 0, 0.1);
            }

            .navbar-custom .navbar-toggler-icon {
                background-color: #ffffff;
            }

        /* Remove border from footer */
        .footer {
            text-align: center;
            padding: 10px;
            margin-top: 100px;
            
            background-color: #1e1e1e;
            color: #888888;
        }

            .footer a {
                color: #007bff;
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">Details App</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-page="/Contact">Contact Us</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            &copy; 2024 - Test2UI - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
